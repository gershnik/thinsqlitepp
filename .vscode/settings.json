{
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.buildDirectory": "${workspaceFolder}/build/vscode/${buildKit}",
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "cpp"
    ],
    "spellright.ignoreRegExps": [
        "/#include\\s+<.+>/g", 
        "/#include\\s+\\\".+\\\"/g",
        "/@addtogroup/g",
        "/@cond/g",
        "/@endcond/g",
        "/@tparam/g"
    ]
}